<view class="container">
  <block wx:for="{{goodsList}}" wx:for-key="id">
    <view bindtap="gotoGoodsDetail" data-goods="{{item}}">
      <view class="goods_item">
        <image class="pic" src="{{item.goodspics}}"></image>
        <view class="right_content">
          <text class="country">{{item.country}}直采 {{item.bigname}}发货</text>
          <text class="name">{{item.title}}</text>
          <view class="price">
            <text class="ourprice">¥{{item.ourprice}}</text>
            <text class="discount">8折</text>
            <text class="marketprice">{{item.marketprice}}</text>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>