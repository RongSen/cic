/* pages/list/index.wxss */
page {
  background: #fff;
  font-size: 14px;
}

.container .brand_item {
  display: flex;
  align-items: center;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
  margin: 5px 0;
  justify-content: center;
}

.container .brand_item .pic {
  display: block;
  width: 100px;
  height: 100px;
  margin: 0 5px;
}

.right_cont {
  flex: 1;
  padding-right: 10px;
}

.right_cont .country {
  display: block;
  color: #939393;
}

.right_cont .name {
  margin: 10px 0;
  overflow-wrap:inherit;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}

.right_cont .ourprice {
  color: #fd9f82;
  font-weight: bold;
}

.right_cont .discount {
  height: 16px;
  line-height: 16px;
  margin: 0 10px;
  padding: 1px 6px 1px 10px;
  background: #fd9f82;
  border-radius: 20%;
  background-size: 215px;
  background-repeat: no-repeat;
  background-position-y: 9%;
  color: #fff;
  font-size: 12px;
}

.right_cont .marketprice {
  text-decoration: line-through;
  color: #939393;
}

