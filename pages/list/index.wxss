/* pages/goodslist/list.wxss */
page{
  background: #fff;
  font-size: 14px;
}
.container .goods_item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 5px 0;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
}
.container .goods_item .pic {
  display: block;
  width: 100px;
  height:100px;
}
.right_content {
  flex: 1;
  padding-right: 10px;
}
.right_content .country {
  display: block;
  color: #939393;
}
.right_content .name {
  margin: 10px 0;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  color: #333;
}
.right_content .ourprice {
  color: #f16236;
  font-weight: bold;
}
.right_content .discount {
  height: 16px;
  line-height: 16px;
  margin: 0 10px;
  padding: 1px 6px 1px 10px;
  background: url(http://www.huanqiuxiaozhen.com/assets/images/discount-bg.png) no-repeat center;
  background-size: cover;
  color: #fff;
}
.right_content .marketprice {
  text-decoration: line-through;
  color: #939393;
}